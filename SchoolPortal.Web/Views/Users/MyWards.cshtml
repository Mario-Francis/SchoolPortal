        <div class="table-responsive">
            <table id="wardsTable" class="table table-sm display text-nowrap f14 table-hover table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Relationship</th>
                        <th>Name</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Class</th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

