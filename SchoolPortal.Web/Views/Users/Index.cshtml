<!-- Add Modal -->
<div class="modal fade" id="addModal">
    <div class="modal-dialog modal-lg modal-dialog-scrollable modal-dialog-centered">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">New User <span></span></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <form>
                <fieldset>
                    <!-- Modal body -->
                    <div class="modal-body">
                        <div class="row mt-2">

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="fname" class="f14">* First Name</label>
                                    <input id="fname" type="text" class="form-control" placeholder="Enter user first name" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="mname" class="f14">Middle Name</label>
                                    <input id="mname" type="text" class="form-control" placeholder="Enter user middle name" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="sname" class="f14">* Surname</label>
                                    <input id="sname" type="text" class="form-control" placeholder="Enter user surname" required />
                                </div>
                            </div>
                            <div class="col-md-6 @(service.IsAdmin?"":"d-none")">
                                <div class="form-group">
                                    <label for="roles" class="f14">* Roles</label>
                                    <select id="roles" class="custom-select form-control" asp-items="@dropdownService.GetRoles()" multiple>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="gender" class="f14">* Geder</label>
                                    <select id="gender" class="custom-select form-control">
                                        <option value="">- Select gender -</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="dob" class="f14">Date of Birth</label>
                                    <input id="dob" type="text" class="form-control dob" placeholder="YYYY-MM-DD" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="email" class="f14">* Email</label>
                                    <input id="email" type="email" class="form-control" placeholder="Enter user email" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="phone" class="f14">* Phone Number</label>
                                    <input id="phone" type="text" class="form-control integer" placeholder="Enter user phone number" maxlength="15" required />
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-light border text-dark btn-sm px-4 py-2 f12" data-dismiss="modal"><i class="fa fa-times"></i> &nbsp;Cancel</button>
                        <button type="submit" id="createBtn" class="btn btn-primary2 btn-sm px-4 py-2 f12"><i class="fa fa-check-circle"></i> &nbsp;Submit</button>
                    </div>
                </fieldset>
            </form>

        </div>
    </div>
</div>

