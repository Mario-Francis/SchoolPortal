@model EndTermResultExportVM;
@{
    Layout = null;
}

<!doctype html>
<html class="no-js" lang="">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@Model.Student.FullName - End-Term Result | Caleb International School</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="img/favicon.png">
    <!-- Normalize CSS -->
    <link rel="stylesheet" href="~/lib/normalize/normalize.css">
    <!-- Main CSS -->
    <link rel="stylesheet" href="~/css/main.css">
    <!-- Bootstrap CSS -->
    <!-- <link rel="stylesheet" href="css/bootstrap.min.css"> -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <!-- Fontawesome CSS -->
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css">
    <!-- Flaticon CSS -->
    <link rel="stylesheet" href="~/fonts/flaticon.css">
    <!-- Animate CSS -->
    <link rel="stylesheet" href="~/lib/animate.css/animate.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/style.css">
    <link href="~/css/fonts.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/custom.css">
    <style>
        :root {
            --claret: #8f1b39;
            --dark_claret: #751630;
            --walnut: #392621;
            --beige: #f6f5dc;
            --flaxsmoke: #808261;
            --cabaret: #db4069;
            --mexicanred: #9c1e3f;
        }

        p {
            margin-bottom: 0;
            padding-bottom: 0;
        }

        label {
            margin-bottom: 0 !important;
        }

        .text-beige {
            color: var(--beige);
        }

        .bg-beige {
            background-color: var(--beige);
        }

        .text-claret {
            color: #8f1b39;
        }

        .bg-claret {
            background-color: #8f1b39;
        }

        .bg-beige {
            background-color: #f6f5dc;
        }
    </style>
</head>

<body class="bg-white">
    <div class="container-fluid px-0">
        <div class="bg-beige p-5">
            <div class="row bg-beige">
                <div class="col-2">
                    <img src="~/img/caleb_logo2.png" class="img-fluid p-2 mx-auto d-block" />
                </div>
                <div class="col-8 overflow-hidden">
                    <div class="text-center py-2">
                        <h1 class="m-0 text-claret font-weight-bold roboto" style="transform: scaleX(2)">CALEB</h1>
                        <h4 class="m-0 text-claret roboto font-weight-bold mt-n2" style="">INTERNATIONAL SCHOOL</h4>
                        <h5 class="m-0 f12 open-sans mini-bold">Kayode Odusola Crescent, Off CMD Road, Ikosi GRA, Magodo, Lagos</h5>
                        <h5 class="m-0 f12 open-sans mini-bold">Email: calebpreschoolmagodo86@gmail.com</h5>
                        <h5 class="m-0 f12 open-sans mini-bold"> <span style="margin-left:37px;">calebelementarymagodo@yahoo.com</span></h5>
                    </div>
                </div>
                <div class="col-2 align-self-end"><p class="f10">@(DateTime.Now.ToString("MMM d, yyyy 'at' hh:mmtt"))</p></div>
            </div>
        </div>
        <hr class="my-0" style="border-top:2px solid #555" />
        <p class="text-center mt-n4"><span class="bg-claret px-5 py-2 rounded-pill text-white roboto font-weight-bold">END OF TERM REPORT</span></p>
        <div class="px-5 py-3">
            <div class="alert alert-light border text-dark mt-2">
                <div class="row">
                    <div class="col-sm-6">
                        <div>
                            <p class="f12 font-weight-bold">Name:</p>
                            <p class="f14 text-dark mini-bold mt-n2 text-uppercase">@Model.Student.FullName</p>
                        </div>
                        <div class="mt-2">
                            <p class="f12 font-weight-bold">Admission No.:</p>
                            <p class="f14 text-dark mini-bold mt-n2">@($"{Model.Student.AdmissionNo}")</p>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="row">
                            <div class="col-sm-6">
                                <div>
                                    <p class="f12 font-weight-bold">Term:</p>
                                    <p class="f14 text-dark mini-bold mt-n2">@Model.Exam.Term</p>
                                </div>
                                <div class="mt-2">
                                    <p class="f12 font-weight-bold">Class:</p>
                                    <p class="f14 text-dark mini-bold mt-n2">@Model.ClassRoom.Class @Model.ClassRoom.RoomCode</p>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div>
                                    <p class="f12 font-weight-bold">Session:</p>
                                    <p class="f14 text-dark mini-bold mt-n2">@Model.Exam.Session</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-8">
                    <div class="alert alert-light border text-dark mt-2">
                        <p class="text-center text-dark f12 font-weight-bold">GRADING SYSTEM</p>
                        <hr class="my-1" />
                        <div class="row f12">
                            @foreach (var g in Model.Grades)
                            {
                                <div class="col-lg-4 col-md-4 col-sm-6 col-12">
                                    <span class="font-weight-bold">@g.Code</span> (@g.From - @g.To) - @g.Description
                                </div>
                            }

                        </div>
                    </div>
                </div>
                @if (Model.AttendanceRecord != null)
                {
                    <div class="col-4">
                        <div class="alert alert-light border text-dark mt-2">
                            <p class="text-center text-dark f12 font-weight-bold">ATTENDANCE</p>
                            <hr class="my-1" />
                            <div class="row f12">
                                <div class="col-12">
                                    <p>No. of times school opened: <b>@Model.AttendanceRecord.SchoolOpenCount</b></p>
                                    <p>No. of times present: <b style="margin-left:38px;">@Model.AttendanceRecord.PresentCount</b></p>
                                    <p>No. of times absent: <b style="margin-left:42px;">@(Model.AttendanceRecord.SchoolOpenCount - Model.AttendanceRecord.PresentCount)</b></p>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
           

            <h6 class="text-center font-weight-bold py-2 text-dark m-0 f14">COGNITIVE DOMAIN</h6>
            <div class="table-responsive">
                <table class="table table-sm table-bordered f12">
                    <thead class="text-center">
                        <tr>
                            <th rowspan="3">SUBJECT</th>
                            <th rowspan="2">1st Half</th>
                            <th colspan="4">2nd Half </th>
                            <th rowspan="2">TERM TOTAL</th>
                            <th rowspan="3">GRADE</th>
                            <th rowspan="3">REMARKS</th>
                        </tr>
                        <tr>
                            <th>CW/HW</th>
                            <th>TEST</th>
                            <th>EXAM</th>
                            <th>TOTAL</th>
                        </tr>
                        <tr>
                            <th>40</th>
                            <th>10</th>
                            <th>10</th>
                            <th>40</th>
                            <th>60</th>
                            <th>100</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model.ResultItems)
                        {
                            <tr>
                                <td class="text-uppercase">@r.SubjectName</td>
                                <td>@r.MidTermTotal</td>
                                <td>@r.ClassWorkScore</td>
                                <td>@r.TestScore</td>
                                <td>@r.ExamScore</td>
                                <td>@r.Total</td>
                                <td>@r.TermTotal</td>
                                <td>@r.Grade</td>
                                <td>@(Model.Grades.FirstOrDefault(g=>g.Code == r.Grade).Description)</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>TOTAL MARK OBTAINED</th>
                            <th>@Model.TotalScoreObtained</th>
                            <th class="border-0"></th>
                            <th class="border-0"></th>
                            <th class="border-0"></th>
                            <th>PERCENTAGE</th>
                            <th>@Model.Percentage</th>
                            <th>@Model.PercentageGrade</th>
                            <th>@(Model.Grades.FirstOrDefault(g=>g.Code == Model.PercentageGrade).Description)</th>
                        </tr>
                        <tr>
                            <th>TOTAL MARK OBTAINABLE</th>
                            <th>@Model.TotalScoreObtainable</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <h6 class="text-center font-weight-bold py-2 text-dark m-0 f14 mt-3">AFFECTIVE DOMAIN</h6>
                    <div class="px-4">
                        <div class="row f12">
                            @foreach (var r in Model.AffectiveDomainBehaviouralRatings)
                            {
                                <div class="col-4 border text-dark font-weight-bold">@r.BehaviouralRating.Name</div>
                                <div class="col-2 border text-dark">@r.Score</div>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <h6 class="text-center font-weight-bold py-2 text-dark m-0 f14 mt-3">PSYCHOMOTOR DOMAIN</h6>
                    <div class="px-4">
                        <div class="row f12">
                            @foreach (var r in Model.PsychoMotorDomainBehaviouralRatings)
                            {
                                <div class="col-8 border text-dark font-weight-bold">@r.BehaviouralRating.Name</div>
                                <div class="col-4 border text-dark">@r.Score</div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-5">
                    <h6 class="text-center font-weight-bold py-2 text-dark m-0 f14 mt-3">PHYSICAL AND HEALTH RECORDS</h6>
                    <div class="table-responsive">
                        <table class="table table-sm table-bordered f12">
                            <tr>
                                <th></th>
                                <th>Beginning of Term</th>
                                <th>End of Term</th>
                            </tr>
                            <tr>
                                <th>Height</th>
                                <td>@(Model.HealthRecord?.StartHeight)M</td>
                                <td>@(Model.HealthRecord?.EndHeight)M</td>
                            </tr>
                            <tr>
                                <th>Weight</th>
                                <td>@(Model.HealthRecord?.StartWeight)M</td>
                                <td>@(Model.HealthRecord?.EndWeight)M</td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="col-md-7">
                    <h6 class="text-center font-weight-bold py-2 text-dark m-0 f14 mt-3">CLASS TEACHER'S COMMENT</h6>
                    <div class="f12 open-sans font-weight-bold border p-2">
                        <p class="text-dark">@Model.TeacherComment</p>
                        <div style="width:200px" class="ml-auto">
                            <hr class="my-2" style="margin-top:40px !important;" />
                            <p class="text-center text-dark">Signature</p>
                        </div>
                    </div>
                </div>

            </div>

            <div class="d-flex flex-row f12 mt-4 font-weight-bold open-sans">
                <div class="border p-3">
                    <p>Head Teacher's Comment</p>
                </div>
                <div class="flex-fill border p-3">
                    <p class="text-dark">@Model.HeadTeacherComment</p>
                    <div style="width:200px" class="ml-auto">
                        <hr class="my-2" style="margin-top:40px !important;" />
                        <p class="text-center text-dark">Signature</p>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>
</html>