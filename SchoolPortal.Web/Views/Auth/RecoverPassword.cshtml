@{
    ViewData["Title"] = "Recover Password";
    Layout = "_AuthLayout";
}

<div class="row">
    <div class="offset-xl-4 col-xl-4 offset-md-3 col-md-6 offset-sm-2 col-sm-8">
        <div class="login-page-content w-100 p-0 m-0" style="margin-top: 10vh !important;">

            <div class="login-box p-5 pb-0 w-100" style="padding-bottom: 0px !important;">
                <div class="p-lg-3">
                    <div class="item-logo mb-3">
                        <!-- <img src="img/logo2.png" alt="logo"> -->
                        <div class="d-flex flex-row pl-3 p-md-0 mx-auto" style="width: 250px;">
                            <div><img src="~/img/caleb_logo2.png" class="img-fluid mt-3" style="max-width: 74px;" alt="logo"></div>
                            <div class="flex-fill auth-title-div">
                                <h3 class="mb-0 mt-2 font-weight-bold text-center">CALEB</h3>
                                <h6 class="mb-0 mt-n2 text-center">INTERNATIONAL SCHOOL, MAGODO</h6>
                            </div>
                        </div>
                        <hr />
                        <h4 class="font-weight-bold text-claret mb-0">Recover Password</h4>
                        <hr class="mb-2" />
                    </div>
                    <div class="alert alert-info f12">
                        <p>Kindly provide your email address and click the button below to get a reset link with which you can use to change your password. If you don't have access to your mial box, please contact your System Administrator for assistance.</p>
                    </div>
                    <form class="login-form mb-4">
                        <fieldset>
                            <div class="form-group">
                                <label for="type">* Who is visiting?</label>
                                <select id="type" class="form-control custom-select" required>
                                    <option value="">- Choose option -</option>
                                    <option value="student">Student</option>
                                    <option value="parent">Parent</option>
                                    <option value="staff">Staff</option>
                                </select>
                                <i class="far fa-user-circle"></i>
                            </div>
                            <div class="form-group">
                                <label for="username">* Email/Username</label>
                                <input id="username" type="text" placeholder="Enter email or usrename" class="form-control" required />
                                <i class="far fa-envelope"></i>
                            </div>

                            <div class="form-group">
                                <button id="sendBtn" type="submit" class="login-btn"><span class="fa fa-paper-plane"></span> &nbsp;Send password reset link</button>
                            </div>
                            <p class="flex-fill f14"><a asp-controller="Auth" asp-action="Index" class="forgot-btn text-claret"><i class="fa fa-arrow-left"></i> Go back to login</a></p>
                        </fieldset>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

@section js{ 
    <script src="~/js/recover_password.js" asp-append-version="true"></script>
}