    <script src="~/lib/datatables.net-bs4/js/dataTables.bootstrap4.js"></script>
    <script src="~/lib/choices.js/choices.js"></script>
    <script>

    </script>
    <script src="~/js/mid_term_results.js" asp-append-version="true"></script>

}