<!-- Add Modal -->
<div class="modal fade" id="addModal">
    <div class="modal-dialog modal-lg modal-dialog-scrollable modal-dialog-centered">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">New Student <span></span></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <form>
                <fieldset>
                    <!-- Modal body -->
                    <div class="modal-body">
                        <div class="row mt-2">

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="fname" class="f14">* First Name</label>
                                    <input id="fname" type="text" class="form-control" placeholder="Enter student first name" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="mname" class="f14">* Middle Name</label>
                                    <input id="mname" type="text" class="form-control" placeholder="Enter student middle name" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="sname" class="f14">* Surname</label>
                                    <input id="sname" type="text" class="form-control" placeholder="Enter student surname" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="gender" class="f14">* Geder</label>
                                    <select id="gender" class="custom-select form-control" required>
                                        <option value="">- Select gender -</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="dob" class="f14">* Date of Birth</label>
                                    <input id="dob" type="text" class="form-control dob" placeholder="YYYY-MM-DD" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="email" class="f14">* Email</label>
                                    <input id="email" type="email" class="form-control" placeholder="Enter student email" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="phone" class="f14">Phone Number</label>
                                    <input id="phone" type="text" class="form-control integer" placeholder="Enter student phone number" maxlength="15" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="enrollmentDate" class="f14">* Enrollment Date</label>
                                    <input id="enrollmentDate" type="text" class="form-control date" placeholder="YYYY-MM-DD" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="admissionNo" class="f14">* Admission Number</label>
                                    <input id="admissionNo" type="text" class="form-control" placeholder="Enter admission number" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="entryClassId" class="f14">* Entry Class</label>
                                    <select id="entryClassId" class="custom-select form-control" asp-items="@dropdownService.GetClasses()" required>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="entryTermId" class="f14">* Entry Term</label>
                                    <select id="entryTermId" class="custom-select form-control" asp-items="@dropdownService.GetTerms()" required>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="entrySession" class="f14">* Entry Session</label>
                                    <input id="entrySession" type="text" class="form-control" placeholder="YYYY/YYYY" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="classId" class="f14">Current Class</label>
                                    <select id="classId" class="custom-select form-control" asp-items="@dropdownService.GetClasses()">
                                        
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="roomId" class="f14">Current Classroom &nbsp;<i id="roomLoader" style="display:none;" class="fa fa-circle-notch fa-spin"></i></label>
                                    <select id="roomId" class="custom-select form-control" disabled>
                                        <option value="">- Select classroom -</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-light border text-dark btn-sm px-4 py-2 f12" data-dismiss="modal"><i class="fa fa-times"></i> &nbsp;Cancel</button>
                        <button type="submit" id="createBtn" class="btn btn-primary2 btn-sm px-4 py-2 f12"><i class="fa fa-check-circle"></i> &nbsp;Submit</button>
                    </div>
                </fieldset>
            </form>

        </div>
    </div>
</div>

<!-- upload batch -->
<div class="modal fade" id="batchUploadModal">
    <div class="modal-dialog modal-md modal-dialog-scrollable modal-dialog-centered">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Batch Add Students <span></span></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <form>
                <fieldset>
                    <!-- Modal body -->
                    <div class="modal-body">
                        <div class="alert alert-info f14">
                            <h6 class="mb-1 f14 font-weight-bold"><i class="fa fa-info-circle"></i> &nbsp;Important Information</h6>
                            <p class="m-0">
                                Kindly ensure the students excel list you wish to upload complies with the template. To download the excel template, click the download button below.
                            </p>
                            <p class="text-right mt-3"><a href="~/templates/Batch Add Students Template.xlsx" download="Batch Students Excel Template.xlsx" class="btn btn-info f12"><i class="fa fa-download"></i> Download template</a></p>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-12">
                                @*<div class="form-group">
                                    <label for="b_role" class="f14">* Role</label>
                                    <select class="form-control custom-select" id="b_role" asp-items="@dropdownService.GetRoles()" required>
                                    </select>
                                </div>*@
                                <div class="form-group">
                                    <label for="file" class="f14">* File</label>
                                    <div class="input-group mb-3 custom_file">
                                        <input type="file" class="d-none file" id="file" name="file" file-text-id="file-text" accept=".xls, .xlsx" required />
                                        <input type="text" class="form-control" style="height: 37px;" id="file-text" disabled placeholder="Choose excel file" />
                                        <div class="input-group-append">
                                            <label class="input-group-text btn px-4 f12" title="Browse file" for="file"><i class="fa fa-folder-open"></i><span class="d-none d-md-inline-block"> &nbsp;&nbsp;Browse</span></label>
                                        </div>
                                    </div>
                                </div>
                                @* <button type="submit" id="submitBtn" class="btn btn-primary d-block ml-auto px-3"><i class="fa fa-upload"></i> &nbsp; Upload file</button>*@
                            </div>
                        </div>
                    </div>
                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-light border text-dark btn-sm px-4 py-2 f12" data-dismiss="modal"><i class="fa fa-times"></i> &nbsp;Cancel</button>
                        <button type="submit" id="uploadBtn" class="btn btn-primary2 btn-sm px-4 py-2 f12"><i class="fa fa-upload"></i> &nbsp;Upload File</button>
                    </div>
                </fieldset>
            </form>

        </div>
    </div>
</div>


